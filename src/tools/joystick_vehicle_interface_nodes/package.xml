<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>joystick_vehicle_interface_nodes</name>
  <version>1.0.0</version>
  <description>
    A simple translation node which interprets sensor_msgs/Joy messages as some form of
    VehicleControlCommand for use with the vehicle interface
  </description>
  <maintainer email="opensource@apex.ai">Apex.AI, Inc</maintainer>
  <license>Apache 2 License</license>

  <buildtool_depend>ament_cmake_auto</buildtool_depend>
  <buildtool_depend>autoware_auto_cmake</buildtool_depend>

  <depend>autoware_auto_control_msgs</depend>
  <depend>autoware_auto_vehicle_msgs</depend>
  <depend>mpark_variant_vendor</depend>
  <depend>joystick_vehicle_interface</depend>
  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>sensor_msgs</depend>
  <depend>std_msgs</depend>

  <build_depend>ament_cmake_ros</build_depend>
  <build_depend>autoware_auto_common</build_depend>

  <exec_depend>ament_index_python</exec_depend>
  <exec_depend>joy</exec_depend>
  <exec_depend>joy_linux</exec_depend>
  <exec_depend>launch_ros</exec_depend>
  <exec_depend>lgsvl_interface</exec_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
